<main style="max-width:900px;margin:2em auto;padding:2em 1em;">
  <h2 style="color:#2563eb;">Administração de Experimentos</h2>
  <table style="width:100%;border-collapse:collapse;background:#fff;border-radius:12px;box-shadow:0 2px 8px #0001;overflow:hidden;">
    <thead style="background:#f1f5f9;">
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Nível</th>
        <th>Aprovado</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      {{#each experimentos}}
      <tr>
        <td>{{id}}</td>
        <td>{{titulo}}</td>
        <td>{{nivel}}</td>
        <td>{{#if aprovado}}Sim{{else}}Não{{/if}}</td>
        <td>
          <a href="/admin/experimentos/{{id}}/editar" class="cta-secondary">Editar</a>
          {{#unless aprovado}}
          <form method="post" action="/admin/experimentos/{{id}}/aprovar" style="display:inline;">
            <button type="submit" class="cta">Aprovar</button>
          </form>
          {{/unless}}
          <form method="post" action="/admin/experimentos/{{id}}/deletar" style="display:inline;" onsubmit="return confirm('Tem certeza?');">
            <button type="submit" class="cta-secondary" style="background:#fff;color:#ef4444;border:2px solid #ef4444;">Excluir</button>
          </form>
        </td>
      </tr>
      {{else}}
      <tr><td colspan="5" style="text-align:center;color:#64748b;">Nenhum experimento cadastrado.</td></tr>
      {{/each}}
    </tbody>
  </table>
</main>
