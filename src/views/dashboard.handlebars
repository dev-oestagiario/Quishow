
<main style="max-width:1100px;margin:2em auto;padding:2em 1em;">
	<div style="display:flex;align-items:center;gap:1.5em;flex-wrap:wrap;justify-content:space-between;">
		<div>
			<h2 style="color:#2563eb;font-size:2.2em;margin-bottom:0.2em;">Olá, {{nome}}!</h2>
			<span style="color:#64748b;font-size:1.1em;">Perfil: <b>{{perfil}}</b></span>
		</div>
		<a href="/logout" class="cta-secondary" style="margin-left:auto;">Sair</a>
	</div>

	{{#if onboardingIA}}
		<div style="background:linear-gradient(90deg,#f1f5f9 60%,#dbeafe 100%);padding:1.2em 1em;border-radius:14px;margin:2em 0;box-shadow:0 2px 8px #2563eb11;display:flex;align-items:center;gap:1em;">
			<img src="/images/ia-bot.svg" alt="IA" style="width:48px;height:48px;">
			<div>
				<strong style="color:#2563eb;">IA QuiShow:</strong><br>
				<span>{{onboardingIA}}</span>
			</div>
		</div>
	{{/if}}

	<section style="display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:2em;margin:2.5em 0;">
		<div class="post-card" style="min-height:140px;">
			<h4 style="color:#2563eb;margin-bottom:0.5em;">Seus experimentos salvos</h4>
			<ul style="padding-left:1em;min-height:2em;">
				<li style="color:#64748b;">Em breve: lista de favoritos</li>
			</ul>
		</div>
		<div class="post-card" style="min-height:140px;">
			<h4 style="color:#2563eb;margin-bottom:0.5em;">Últimos acessos</h4>
			<ul style="padding-left:1em;min-height:2em;">
				<li style="color:#64748b;">Em breve: histórico de experimentos</li>
			</ul>
		</div>
		<div class="post-card" style="min-height:140px;">
			<h4 style="color:#2563eb;margin-bottom:0.5em;">Sugestões da IA</h4>
			<ul style="padding-left:1em;min-height:2em;">
				<li style="color:#64748b;">Em breve: recomendações personalizadas</li>
			</ul>
		</div>
		<div class="post-card" style="min-height:140px;">
			<h4 style="color:#2563eb;margin-bottom:0.5em;">Notificações</h4>
			<ul style="padding-left:1em;min-height:2em;">
				<li style="color:#64748b;">Em breve: novidades e avisos importantes</li>
			</ul>
		</div>
	</section>

	<section style="margin:2.5em 0;">
		<h4 style="color:#2563eb;">Progresso na plataforma</h4>
		<div style="background:#f1f5f9;border-radius:8px;overflow:hidden;width:100%;max-width:400px;margin:0 auto 1em auto;box-shadow:0 2px 8px #2563eb11;">
			<div style="background:linear-gradient(90deg,#3B82F6,#2563eb);height:18px;width:40%;transition:width 0.5s;"></div>
		</div>
		<div style="text-align:center;color:#64748b;">40% de conquistas desbloqueadas</div>
	</section>

	{{#if (eq perfil 'aluno')}}
		<section style="margin:2.5em 0;">
			<h4 style="color:#2563eb;">Experimentos disponíveis</h4>
			<div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:1.5em;">
				{{#each experimentos}}
					<div class="post-card" style="padding:1em 1em 1.2em 1em;min-height:120px;">
						<h5 style="margin:0 0 0.3em 0;color:#2563eb;">{{titulo}}</h5>
						<div style="color:#64748b;font-size:0.98em;">Nível: {{nivel}}</div>
						<a href="/experimentos/{{id}}" class="cta-secondary" style="margin-top:0.7em;display:inline-block;">Ver detalhes</a>
					</div>
				{{else}}
					<div style="color:#64748b;">Nenhum experimento disponível.</div>
				{{/each}}
			</div>
		</section>
	{{else}}
		<div style="margin:2.5em 0;text-align:center;">
			<p style="color:#64748b;">Use o menu para acessar as funções administrativas.</p>
			<a href="/admin/dashboard" class="cta">Ir para dashboard admin</a>
		</div>
	{{/if}}
</main>
