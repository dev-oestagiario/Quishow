<h2>Novo Experimento</h2>
<form method="post" action="/experimentos/novo">
  <input type="text" name="titulo" placeholder="Título" required>
  <textarea name="resumo" placeholder="Resumo" required></textarea>
  <input type="text" name="imagem" placeholder="URL da imagem">
  <select name="nivel" required>
    <option value="iniciante">Iniciante</option>
    <option value="intermediario">Intermediário</option>
    <option value="avancado">Avançado</option>
  </select>
  <input type="text" name="tema" placeholder="Tema (ex: ácidos, gases)">
  <textarea name="materiais" placeholder="Materiais necessários (um por linha)"></textarea>
  <textarea name="passos" placeholder="Passo a passo (um por linha)"></textarea>
  <input type="text" name="video" placeholder="URL do vídeo tutorial">
  <button type="submit">Criar experimento</button>
</form>
{{#if error}}<p style="color:red">{{error}}</p>{{/if}}
