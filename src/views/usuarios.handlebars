<h2>Usuários</h2>
<table border="1" cellpadding="8" style="width:100%;margin-bottom:2em;">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Perfil</th>
      <th>Criado em</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each usuarios}}
    <tr>
      <td>{{id}}</td>
      <td>{{nome}}</td>
      <td>{{email}}</td>
      <td>{{perfil}}</td>
      <td>{{criado_em}}</td>
      <td>
        <a href="/admin/usuarios/{{id}}/editar">Editar</a>
        {{#unless (eq perfil 'professor')}}
        <form method="post" action="/admin/usuarios/{{id}}/promover" style="display:inline;">
          <button type="submit">Promover</button>
        </form>
        {{/unless}}
        <form method="post" action="/admin/usuarios/{{id}}/banir" style="display:inline;">
          <button type="submit" onclick="return confirm('Tem certeza?')">Banir</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<a href="/dashboard">Voltar ao dashboard</a>
